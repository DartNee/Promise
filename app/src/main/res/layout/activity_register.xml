<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intro.Register">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2E8CFF"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#8B0000">


    </androidx.appcompat.widget.Toolbar>


    <EditText
        android:id="@+id/user_login_id_register"
        android:layout_width="184dp"
        android:layout_height="35dp"
        android:layout_marginTop="284dp"
        android:layout_marginEnd="77dp"
        android:background="@drawable/shape3"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/user_pass_register"
        android:layout_width="179dp"
        android:layout_height="38dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="78dp"
        android:background="@drawable/shape3"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/user_login_id_register"
        app:layout_constraintTop_toBottomOf="@+id/user_login_id_register" />

    <EditText
        android:id="@+id/user_name_register"
        android:layout_width="179dp"
        android:layout_height="37dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/shape3"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/user_pass_register"
        app:layout_constraintTop_toBottomOf="@+id/user_pass_register" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="회원가입"
        android:background="@drawable/big_shape"
        android:fontFamily="@font/happiness"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name_register" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="76dp"
        android:fontFamily="@font/happiness"

        android:text="Sign up"
        android:textColor="#2196F3"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/user_login_id_register"
        app:layout_constraintStart_toStartOf="@+id/user_login_id_register" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="26dp"
        android:fontFamily="@font/happiness"
        android:text="아이디"

        android:textSize="18dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/user_login_id_register"
        app:layout_constraintEnd_toStartOf="@+id/user_login_id_register"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/happiness"
        android:text="비밀번호"

        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_pass_register"
        app:layout_constraintEnd_toStartOf="@+id/user_pass_register"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/happiness"
        android:text="이름"

        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_name_register"
        app:layout_constraintEnd_toStartOf="@+id/user_name_register"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>