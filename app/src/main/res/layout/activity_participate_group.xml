<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave"
    tools:context=".group.Participating_Group">


    <EditText
        android:id="@+id/group_code"
        android:layout_width="248dp"
        android:layout_height="50dp"
        android:layout_marginBottom="400dp"
        android:layout_weight="1"
        android:background="@drawable/shape"
        android:ems="10"
        android:gravity="center"
        android:hint="그룹 코드"
        android:inputType="textPersonName"
        android:textColorHint="#54151111"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btn_participe"
        android:layout_width="86dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/big_shape"
        android:fontFamily="@font/happiness"
        android:text="참가"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_code" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="122dp"
        android:layout_height="99dp"

        android:layout_marginTop="16dp"
        android:layout_marginBottom="174dp"
        app:layout_constraintBottom_toTopOf="@+id/group_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/join" />

</androidx.constraintlayout.widget.ConstraintLayout>